{
  "claude": {
    "api": {
      "timeout": 120000,
      "maxRetries": 3,
      "retryDelay": 1000
    },
    "interface": {
      "theme": "auto",
      "showLineNumbers": true,
      "syntaxHighlighting": true,
      "wordWrap": true,
      "fontSize": 14,
      "tabSize": 2,
      "insertSpaces": true
    },
    "behavior": {
      "autoSave": true,
      "autoSaveDelay": 1000,
      "confirmBeforeQuit": true,
      "rememberContext": true,
      "contextLimit": 10,
      "verboseMode": false,
      "showProgress": true,
      "playSounds": false
    },
    "tools": {
      "defaultTools": [
        "Read",
        "Write",
        "Edit",
        "MultiEdit",
        "Bash",
        "Grep",
        "Glob",
        "LS",
        "TodoWrite"
      ],
      "enabledTools": {
        "WebSearch": true,
        "WebFetch": true,
        "NotebookEdit": true,
        "Task": true,
        "ExitPlanMode": true
      },
      "toolSettings": {
        "bash": {
          "defaultTimeout": 120000,
          "maxOutputSize": 30000,
          "workingDirectory": "${PROJECT_ROOT}"
        },
        "grep": {
          "defaultMode": "files_with_matches",
          "caseSensitive": false,
          "multiline": false
        },
        "edit": {
          "preserveFormatting": true,
          "validateSyntax": true,
          "backupBeforeEdit": false
        }
      }
    },
    "projects": {
      "autoDetect": true,
      "defaultStructure": {
        "createReadme": false,
        "createGitignore": false,
        "createTests": false
      },
      "templates": {
        "unity": "${CLAUDE_SETUP}/templates/unity",
        "cocos": "${CLAUDE_SETUP}/templates/cocos",
        "web": "${CLAUDE_SETUP}/templates/web"
      }
    },
    "git": {
      "autoStage": false,
      "commitStyle": "conventional",
      "signCommits": false,
      "pushAfterCommit": false,
      "defaultBranch": "main",
      "protectedBranches": ["main", "master", "production"],
      "hooks": {
        "preCommit": true,
        "prePush": true
      }
    },
    "testing": {
      "autoRun": false,
      "coverage": true,
      "frameworks": {
        "javascript": "jest",
        "typescript": "jest",
        "python": "pytest",
        "csharp": "nunit",
        "cpp": "googletest"
      },
      "beforeCommit": true
    },
    "linting": {
      "autoFix": true,
      "onSave": false,
      "frameworks": {
        "javascript": "eslint",
        "typescript": "eslint",
        "python": "ruff",
        "csharp": "dotnet-format",
        "cpp": "clang-format"
      }
    },
    "formatting": {
      "onSave": true,
      "frameworks": {
        "javascript": "prettier",
        "typescript": "prettier",
        "python": "black",
        "csharp": "dotnet-format",
        "cpp": "clang-format"
      }
    },
    "performance": {
      "maxConcurrentOperations": 5,
      "cacheEnabled": true,
      "cacheSize": "500MB",
      "cacheDuration": 3600,
      "streamResponses": true
    },
    "security": {
      "scanForSecrets": true,
      "blockSensitiveFiles": true,
      "sensitivePatterns": [
        "*.key",
        "*.pem",
        "*.env",
        "*_secret*",
        "*password*"
      ],
      "allowedDomains": [
        "github.com",
        "gitlab.com",
        "bitbucket.org",
        "*.the1studio.com"
      ]
    },
    "logging": {
      "level": "info",
      "file": "~/.claude/logs/claude.log",
      "maxSize": "10MB",
      "maxFiles": 5,
      "format": "json"
    },
    "shortcuts": {
      "newChat": "Ctrl+N",
      "clearChat": "Ctrl+L",
      "toggleSidebar": "Ctrl+B",
      "search": "Ctrl+F",
      "undo": "Ctrl+Z",
      "redo": "Ctrl+Y",
      "copy": "Ctrl+C",
      "paste": "Ctrl+V",
      "save": "Ctrl+S"
    },
    "experimental": {
      "enableBetaFeatures": false,
      "parallelExecution": true,
      "smartContextManagement": true,
      "predictiveCompletion": false
    }
  },
  "environment": {
    "CLAUDE_HOME": "~/.claude",
    "CLAUDE_SETUP": "${HOME}/ClaudeSetup",
    "CLAUDE_PROJECTS": "${HOME}/projects",
    "CLAUDE_CACHE": "~/.claude/cache",
    "CLAUDE_LOGS": "~/.claude/logs",
    "CLAUDE_AGENTS": "~/.claude/agents",
    "CLAUDE_MCP": "~/.claude/mcp"
  },
  "aliases": {
    "cc": "claude code",
    "cct": "claude code --task",
    "ccr": "claude code --resume",
    "ccp": "claude code --plan",
    "cch": "claude code --help",
    "ccl": "claude code --list",
    "ccu": "claude code --update"
  }
}