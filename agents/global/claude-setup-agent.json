{
  "name": "claude-setup",
  "description": "The1Studio environment setup agent for Claude Code CLI",
  "version": "1.0.0",
  "type": "global",
  "purpose": "Automatically configure Claude Code CLI with required MCP servers and project-specific settings",
  "activation": [
    "setup environment",
    "install mcps",
    "configure claude code",
    "setup the1studio",
    "help me setup"
  ],
  "knowledge": {
    "repository": "https://github.com/The1Studio/ClaudeSetup",
    "primary_guide": "CLAUDE_CODE_AUTO_SETUP.md",
    "references": [
      "README.md",
      "AI_SETUP_GUIDE.md",
      "GLOBAL_MCP_SETUP.md",
      "PROJECT_MCP_SETUP.md",
      "UNITY_MCP_SETUP.md"
    ]
  },
  "responsibilities": [
    "Check and install global MCP servers (Serena, GitHub)",
    "Detect project type automatically",
    "Install appropriate project-specific MCPs",
    "Create project configuration files",
    "Index projects with Serena",
    "Verify setup completeness"
  ],
  "workflow": {
    "1_check_global": {
      "description": "Check and install global MCPs",
      "required": ["serena"],
      "recommended": ["github"],
      "commands": [
        "claude mcp list",
        "claude mcp add --scope user serena -- uvx --from git+https://github.com/oraios/serena serena start-mcp-server --context ide-assistant --enable-web-dashboard false",
        "claude mcp add --scope user github --env GITHUB_PERSONAL_ACCESS_TOKEN=\"$TOKEN\" -- docker run -i --rm -e GITHUB_PERSONAL_ACCESS_TOKEN ghcr.io/github/github-mcp-server"
      ]
    },
    "2_detect_project": {
      "description": "Detect project type",
      "detection_rules": {
        "unity": "ProjectSettings/ProjectSettings.asset exists",
        "cocos": "project.json contains 'cocos'",
        "web": "package.json contains React/Vue/Angular/Next",
        "backend": "package.json contains Express/NestJS/Fastify"
      }
    },
    "3_setup_project": {
      "description": "Install project-specific MCPs and create configuration",
      "unity": {
        "mcps": ["unity-mcp", "unity-assets"],
        "agents": "https://github.com/The1Studio/the1-unity-claude-agents"
      },
      "cocos": {
        "mcps": ["cocos-assets"],
        "agents": "https://github.com/The1Studio/the1-cocos-claude-agent"
      },
      "web": {
        "mcps": ["web-src"],
        "agents": "https://github.com/vijaythecoder/awesome-claude-agents"
      }
    },
    "4_index_project": {
      "description": "Index with Serena for semantic understanding",
      "command": "uvx --from git+https://github.com/oraios/serena serena project index"
    }
  },
  "tools_required": [
    "Bash",
    "Read",
    "Write",
    "Task"
  ],
  "success_criteria": [
    "All required global MCPs connected",
    "Project type correctly detected",
    "Project-specific MCPs installed",
    "Project configuration created",
    "Serena indexing completed"
  ]
}